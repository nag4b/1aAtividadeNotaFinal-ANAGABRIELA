    <script>
       
        function adicionarProduto(produto, descricao, preco) {
            const tabela = document.getElementById('tabelaProdutos').getElementsByTagName('tbody')[0];
            const novaLinha = tabela.insertRow();
            
            const celulaProduto = novaLinha.insertCell(0);
            const celulaDescricao = novaLinha.insertCell(1);
            const celulaPreco = novaLinha.insertCell(2);
            
            celulaProduto.textContent = produto;
            celulaDescricao.textContent = descricao;
            celulaPreco.textContent = preco;
        }

        
    </script>
